{
    "name": "palpalani/bayrewards-laravel",
    "description": "BayRewards PHP SDK for Laravel Framework - A comprehensive rewards platform integration for e-commerce stores.",
    "type": "library",
    "keywords": [
        "bayrewards",
        "rewards",
        "loyalty",
        "points",
        "referral",
        "e-commerce",
        "laravel",
        "laravel-package",
        "sdk",
        "api",
        "palpalani"
    ],
    "homepage": "https://github.com/palpalani/bayrewards-laravel",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/palpalani/bayrewards-laravel/issues",
        "source": "https://github.com/palpalani/bayrewards-laravel",
        "docs": "https://github.com/palpalani/bayrewards-laravel#readme"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/palpalani/bayrewards-laravel.git"
    },
    "authors": [
        {
            "name": "Prasanth",
            "email": "prasanth.s@targetbay.com",
            "role": "Developer"
        },
        {
            "name": "palPalani",
            "email": "palani.p@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.92.7",
        "illuminate/contracts": "^11.0|^12.0",
        "saloonphp/saloon": "^3.14"
    },
    "require-dev": {
        "laravel/pint": "^1.26.0",
        "nunomaduro/collision": "^8.8.2|^9.0",
        "larastan/larastan": "^3.8.0",
        "orchestra/testbench": "^10.8.0",
        "pestphp/pest": "^4.0|^5.0",
        "pestphp/pest-plugin-arch": "^4.0|^5.0",
        "pestphp/pest-plugin-laravel": "^4.0|^5.0",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^1.2.1|^2.0",
        "phpstan/phpstan-phpunit": "^1.4.2|^2.0"
    },
    "suggest": {
        "ext-curl": "Required for making HTTP requests to the BayRewards API",
        "ext-json": "Required for JSON encoding and decoding"
    },
    "autoload": {
        "psr-4": {
            "Palpalani\\BayRewards\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Palpalani\\BayRewards\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php ./vendor/bin/testbench package:discover --ansi"
        ],
        "analyse": [
            "vendor/bin/phpstan analyse"
        ],
        "test": [
            "vendor/bin/pest --no-coverage"
        ],
        "test-coverage": [
            "vendor/bin/pest --coverage"
        ],
        "format": [
            "vendor/bin/pint"
        ],
        "format-test": [
            "vendor/bin/pint --test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "platform-check": false,
        "archive": {
            "exclude": [
                "/.github",
                "/.idea",
                "/.phpunit.cache",
                "/tests",
                "/phpstan-baseline.neon",
                "/phpstan.neon.dist",
                "/phpunit.xml.dist",
                "/pint.json",
                "/.gitattributes",
                "/.gitignore",
                "/.editorconfig"
            ]
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Palpalani\\BayRewards\\BayRewardsServiceProvider"
            ],
            "aliases": {
                "BayRewards": "Palpalani\\BayRewards\\Facades\\BayRewards"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
